generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Lead {
    id           String @id @default(uuid()) @db.VarChar(36)
    nomeCompleto String @db.VarChar(1024)
    email        String @unique @db.VarChar(1024)
    telefone     String @db.VarChar(1024)
    unidades     Unit[]

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model Unit {
    id                         String        @id @default(uuid()) @db.VarChar(36)
    leadId                     String?       @db.VarChar(36)
    codigoDaUnidadeConsumidora String        @unique @db.VarChar(1024)
    modeloFasico               String
    enquadramento              String
    consumoEmReais             Float
    historicoDeConsumoEmKWH    Consumo[]
    Lead                       Lead?         @relation(fields: [leadId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model Consumo {
    id                    Int      @id @default(autoincrement())
    consumoForaPontaEmKWH Float
    mesDoConsumo          DateTime
    Unit                  Unit?    @relation(fields: [unitId], references: [id])
    unitId                String?

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}
