generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Lead {
  id           String   @id @default(uuid()) @db.VarChar(36)
  createdAt    DateTime @default(now())
  email        String   @unique
  nomeCompleto String
  telefone     String
  units        Unit[]
}

model Unit {
  id                         String        @id @default(uuid()) @db.VarChar(36)
  createdAt                  DateTime      @default(now())
  codigoDaUnidadeConsumidora String        @unique
  modeloFasico               PhaseModel
  enquadramento              ChargingModel
  leadId                     String        @db.VarChar(36)
  consumoEmReais             Int
  Consumo                    Consumo[]
  Lead                       Lead          @relation(fields: [leadId], references: [id])

  @@index([leadId], map: "Unit_leadId_fkey")
}

model Consumo {
  id                    String   @id @default(uuid()) @db.VarChar(36)
  consumoForaPontaEmKWH Int
  mesDoConsumo          DateTime
  unitId                String   @db.VarChar(36)
  Unit                  Unit     @relation(fields: [unitId], references: [id])

  @@index([unitId], map: "Consumo_unitId_fkey")
}

enum PhaseModel {
  monofasico
  bifasico
  trifasico
}

enum ChargingModel {
  AX
  B1
  B2
  B3
}
