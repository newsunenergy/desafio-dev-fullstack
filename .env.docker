# Docker environment variables
# Used when running the application with docker-compose

# MySQL Configuration
MYSQL_HOST=mysql
MYSQL_USER=dev_user
MYSQL_PASSWORD=dev_pass
MYSQL_DATABASE=dev_db
MYSQL_ROOT_PASSWORD=root_pass
MYSQL_PORT=3306

# Backend Configuration
PORT=8080
NODE_ENV=production

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://backend:8080

# CORS and URLs
FRONT_URL_DEV=http://frontend:3000
FRONT_URL=http://frontend:3000

# External APIs
MAGIC_PDF_URL=https://magic-pdf.solarium.newsun.energy/v1/magic-pdf

# Database URL (TypeORM)
DATABASE_URL=mysql://root:root_pass@mysql:3306/dev_db?connection_limit=5&pool_timeout=3
