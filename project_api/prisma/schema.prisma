generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Lead {
  id         String      @id @default(uuid())
  nome       String
  email      String      @unique
  telefone   String
  unidades   Unidade[]
  simulacoes Simulacao[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Unidade {
  id                         String             @id @default(uuid())
  codigoDaUnidadeConsumidora String             @unique
  modeloFasico               TipoModeloFasico
  enquadramento              TipoEnquadramento
  historicoDeConsumoEmKWH    Consumo[]          @relation("UnidadeConsumo")
  leadId                     String
  lead                       Lead               @relation(fields: [leadId], references: [id], onDelete: Cascade)
  simulacoes                 SimulacaoUnidade[]
  createdAt                  DateTime           @default(now())
  updatedAt                  DateTime           @updatedAt
}

model Consumo {
  id                    String   @id @default(uuid())
  consumoForaPontaEmKWH Int
  mesDoConsumo          DateTime
  unidadeId             String
  unidade               Unidade  @relation("UnidadeConsumo", fields: [unidadeId], references: [id], onDelete: Cascade)
}

model Simulacao {
  id        String             @id @default(uuid())
  leadId    String
  lead      Lead               @relation(fields: [leadId], references: [id], onDelete: Cascade)
  unidades  SimulacaoUnidade[]
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}

model SimulacaoUnidade {
  simulacaoId String
  unidadeId   String
  simulacao   Simulacao @relation(fields: [simulacaoId], references: [id], onDelete: Cascade)
  unidade     Unidade   @relation(fields: [unidadeId], references: [id], onDelete: Cascade)

  @@id([simulacaoId, unidadeId])
}

enum TipoModeloFasico {
  monofasico
  bifasico
  trifasico
}

enum TipoEnquadramento {
  AX
  B1
  B2
  B3
}
